<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTabPane?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" fx:id="pane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="HomeTutor.EditTutorController">
   <children>
      <JFXButton fx:id="saveBut" buttonType="RAISED" layoutX="406.0" layoutY="156.0" onAction="#save" prefHeight="30.0" prefWidth="145.0" style="-fx-background-color: #002b43;" text="SAVE CHANGES" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font>
      </JFXButton>
      <JFXButton fx:id="cancelBut" buttonType="RAISED" layoutX="406.0" layoutY="307.0" onAction="#cancel" style="-fx-background-color: c4c2c2; -fx-border-color: #002b43;" text="DISCARD CHANGES" textAlignment="CENTER" textFill="#002b43">
         <font>
            <Font size="14.0" />
         </font>
      </JFXButton>
      <JFXButton fx:id="deleteBut" layoutX="443.0" layoutY="25.0" text="Delete account" textFill="RED" underline="true" />
      <ButtonBar fx:id="backBut" layoutX="25.0" layoutY="25.0" onMouseClicked="#back">
         <buttons>
            <ImageView fitHeight="39.0" fitWidth="21.0" pickOnBounds="true" preserveRatio="true" rotate="-180.0">
               <image>
                  <Image url="@../SQL/files/icons8-arrow-96.png" />
               </image>
            </ImageView>
            <Label text="Back to home" />
         </buttons>
      </ButtonBar>
      <JFXTabPane fx:id="tp" layoutX="23.0" layoutY="53.0" prefHeight="293.0" prefWidth="333.0" style="-fx-background-color: white;">
         <tabs>
            <Tab fx:id="accTab" onSelectionChanged="#returnToAcc" text="Account Details">
              <content>
                <AnchorPane fx:id="accDet" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <JFXTextField fx:id="username" layoutX="13.0" layoutY="147.0" prefHeight="25.0" prefWidth="203.0" />
                        <JFXButton fx:id="changePass" buttonType="RAISED" layoutX="13.0" layoutY="197.0" onAction="#passEdit" prefHeight="32.0" prefWidth="203.0" style="-fx-background-color: c4c2c2; -fx-border-color: #002b43;" text="CHANGE PASSWORD" textAlignment="CENTER" textFill="#002b43" wrapText="true">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </JFXButton>
                        <ImageView fx:id="imageShow" fitHeight="103.0" fitWidth="203.0" layoutX="14.0" layoutY="14.0" onMouseClicked="#upload" pickOnBounds="true" preserveRatio="true" />
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
            <Tab fx:id="personalTab" onSelectionChanged="#returnToPersonal" text="Personal Details">
              <content>
                <AnchorPane fx:id="personalDet" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <JFXTextField fx:id="fname" layoutX="28.0" layoutY="32.0" prefHeight="25.0" prefWidth="166.0" />
                        <JFXTextField fx:id="surname" layoutX="28.0" layoutY="83.0" prefHeight="25.0" prefWidth="166.0" />
                        <JFXComboBox fx:id="catSelect" layoutX="28.0" layoutY="201.0" prefHeight="25.0" prefWidth="166.0" />
                        <JFXTextField fx:id="email" layoutX="28.0" layoutY="136.0" prefHeight="25.0" prefWidth="166.0" />
                        <Label layoutX="28.0" layoutY="13.0" text="First name">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font></Label>
                        <Label layoutX="29.0" layoutY="68.0" prefHeight="17.0" prefWidth="53.0" text="Surname">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font></Label>
                        <Label layoutX="29.0" layoutY="119.0" prefHeight="17.0" prefWidth="53.0" text="Email">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font></Label>
                        <Label layoutX="28.0" layoutY="177.0" prefHeight="17.0" prefWidth="96.0" text="Department">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font></Label>
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
         </tabs>
      </JFXTabPane>
   </children>
</AnchorPane>
